{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "*.ts": ["./*"]
    }
  }
}
